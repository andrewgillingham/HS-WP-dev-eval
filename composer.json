{
  "name": "andrew/hs-wp-dev-eval",
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "wpackagist-plugin/advanced-custom-fields": "*",
    "wpackagist-plugin/akismet": "*",
    "wpackagist-plugin/wordpress-seo": "*"
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true
    }
  },
  "scripts": {
    "post-install-cmd": "cd ./wp-content/themes/eval && npm install && npm run build"
  }
}
